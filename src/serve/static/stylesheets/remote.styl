@import "nib"

@import "includes/ui"
@import "includes/base"

if theme is "light"
  @import "includes/light"
else
  @import "includes/dark"

pixelated()
  image-rendering optimizeSpeed             /* Legal fallback */
  image-rendering -moz-crisp-edges          /* Firefox        */
  image-rendering -o-crisp-edges            /* Opera          */
  image-rendering -webkit-optimize-contrast /* Safari         */
  image-rendering optimize-contrast         /* CSS3 Proposed  */
  image-rendering crisp-edges               /* CSS4 Proposed  */
  image-rendering pixelated                 /* CSS4 Proposed  */
  -ms-interpolation-mode nearest-neighbor   /* IE8+           */

#devkit
  height 100%
  width 100%
  overflow hidden

  #remote
    height 100%
    width 100%
    overflow hidden

    #contents
      height 100%
      width 100%
      display flex
      align-items center
      flex-direction column
      position relative

      #header
        font-size 30px
        font-weight 300
        margin 40px

      #notConnectedEl
        position relative

        #qrcode
          flex 1

          #qr
            display flex
            justify-content center

            img
              pixelated()

      #connectedEl
        position relative
        display flex
        align-items center
        flex-direction column

        #deviceImage
          flex 1
          margin 20px
          width 200px

        #run
          flex 2
          position relative
          width 100px

        #connectUri
          font-size 25px
          font-weight 300
          text-align: center
          margin 20px
          flex 3
          user-select auto

      #build-spinner
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%
        opacity 0
        transition all 0.5s
        background rgba(0, 0, 0, 0.8)
        pointer-events none

        display flex
        align-items center
        justify-content center

        #spinner
          transition all 0.5s
          width 40px
          height 40px
          opacity 0
          pointer-events none
          background url(../icons/spinner.png)
          background-size 40px 40px
          background-repeat no-repeat

      &.building
        #build-spinner
          opacity 1

          #spinner
            opacity 1
            animation spin 0.5s linear infinite



@keyframes spin
  100%
    transform rotate(360deg)
